{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		// 2. Attach to WebView2 (Chromium) frontend via Chrome DevTools Protocol (Windows only)
		// If using built-in js-debug (VS Code), you can attempt an attach like below.
		{
			"name": "Attach Frontend (WebView2/Chrome)",
			"type": "chrome",
			"request": "attach",
			"address": "localhost",
			"port": 9876,
			"webRoot": "${workspaceFolder}",
			"timeout": 30000,
			"sourceMaps": true
		},
		{
			"name": "Launch App Debug",
			"type": "cppvsdbg",
			"request": "launch",
			// change the exe name to your actual exe name
			// (to debug release builds, change `target/debug` to `release/debug`)
			"program": "${workspaceRoot}/src-tauri/target/debug/app.exe",
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "dev"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Tauri Development Debug",
			"cargo": {
				"args": [
					"build",
					"--manifest-path=./src-tauri/Cargo.toml",
					"--no-default-features"
				]
			},
			// task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
			"preLaunchTask": "ui:dev"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Tauri Production Debug",
			"cargo": {
				"args": [
					"build",
					"--release",
					"--manifest-path=./src-tauri/Cargo.toml"
				]
			},
			// task for the `beforeBuildCommand` if used, must be configured in `.vscode/tasks.json`
			"preLaunchTask": "ui:build"
		}
	]
}
